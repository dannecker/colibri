<% content_for :page_actions do %>
  <li><%= button_link_to Colibri.t(:back_to_products_list), session[:return_to] || admin_products_url, :icon => 'icon-arrow-left' %></li>
  <% if can?(:create, Colibri::Product) %>
    <li id="new_product_link">
      <%= button_link_to Colibri.t(:new_product), new_object_url, { :icon => 'icon-plus', :id => 'admin_new_product' } %>
    </li>
  <% end %>
<% end %>

<%= render :partial => 'colibri/admin/shared/product_sub_menu' %>

<%= render :partial => 'colibri/admin/shared/product_tabs', :locals => { :current => 'Product Details' } %>
<%= render :partial => 'colibri/shared/error_messages', :locals => { :target => @product } %>

<%= form_for [:admin, @product], :method => :put, :html => { :multipart => true } do |f| %>
  <fieldset class="no-border-top">
    <%= render :partial => 'form', :locals => { :f => f } %>
    <%= render :partial => 'colibri/admin/shared/edit_resource_links' %>
  </fieldset>
<% end %>

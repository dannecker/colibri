<%= render :partial => 'colibri/admin/shared/configuration_menu' %>

<% content_for :page_title do %>
  <%= Colibri.t(:editing_shipping_category) %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to Colibri.t(:back_to_shipping_categories), colibri.admin_shipping_categories_path, :icon => 'icon-arrow-left' %>
  </li>
<% end %>

<%= render :partial => 'colibri/shared/error_messages', :locals => { :target => @shipping_category } %>

<%= form_for [:admin, @shipping_category] do |f| %>
  <fieldset class="no-border-top">
    <%= render :partial => 'form', :locals => { :f => f } %>
    <%= render :partial => 'colibri/admin/shared/edit_resource_links' %>
  </fieldset>
<% end %>

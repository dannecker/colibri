<%= render :partial => 'colibri/admin/shared/configuration_menu' %>

<% content_for :page_title do %>
  <%= Colibri.t(:editing_state) %> <i class="icon-arrow-right"></i> <%= @state.name %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to Colibri.t(:back_to_states_list), colibri.admin_country_states_url(@country), :icon => 'icon-arrow-left' %>
  </li>
<% end %>

<%= render :partial => 'colibri/shared/error_messages', :locals => { :target => @state } %>

<%= form_for [:admin, @country, @state] do |f| %>
  <fieldset class="no-border-top">
    <%= render :partial => 'form', :locals => { :f => f } %>
    <%= render :partial => 'colibri/admin/shared/edit_resource_links' %>
  </fieldset>
<% end %>

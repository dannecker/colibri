<% content_for :page_title do %>
  <%= Colibri.t(:new_user) %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to Colibri.t(:back_to_users_list), colibri.admin_users_path, :icon => 'icon-arrow-left' %>
  </li>
<% end %>

<div data-hook="admin_user_new_form_header">
  <%= render :partial => 'colibri/shared/error_messages', :locals => { :target => @user } %>
</div>

<div data-hook="admin_user_new_form">
  <%= form_for [:admin, @user], url: admin_users_url, method: :post do |f| %>
    <%= render :partial => 'form', :locals => { :f => f } %>

    <div data-hook="admin_user_new_form_buttons">
      <%= render :partial => 'colibri/admin/shared/new_resource_links' %>
    </div>
  <% end %>
</div>

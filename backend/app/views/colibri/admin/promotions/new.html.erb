<% content_for :page_title do %>
  <%= Colibri.t(:new_promotion) %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to Colibri.t(:back_to_promotions_list), colibri.admin_promotions_path, :icon => 'icon-arrow-left' %>
  </li>
<% end %>

<%= form_for :promotion, :url => collection_url do |f| %>
  <fieldset class="no-border-top">
    <%= render :partial => 'form', :locals => { :f => f } %>
    <%= render :partial => 'colibri/admin/shared/new_resource_links' %>
  </fieldset>
<% end %>

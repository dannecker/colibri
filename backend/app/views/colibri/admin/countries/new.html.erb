<% content_for :page_title do %>
  <%= Colibri.t(:new_country) %>
<% end %>

<% content_for :page_actions do %>
  <li><%= link_to_with_icon 'icon-arrow-left', Colibri.t(:back_to_countries_list), admin_countries_path, :class => 'button' %></li>
<% end %>

<%= render :partial => 'colibri/shared/error_messages', :locals => { :target => @countries } %>

<%= form_for [:admin, @country] do |f| %>
  <fieldset class="no-border-top">
    <%= render :partial => 'form', :locals => { :f => f } %>
    <%= render :partial => 'colibri/admin/shared/new_resource_links' %>
  </fieldset>
<% end %>

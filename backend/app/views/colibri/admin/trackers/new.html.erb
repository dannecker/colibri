<%= render :partial => 'colibri/admin/shared/configuration_menu' %>

<% content_for :page_title do %>
  <%= Colibri.t(:new_tracker) %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to Colibri.t(:back_to_trackers_list), colibri.admin_trackers_path, :icon => 'icon-arrow-left' %>
  </li>
<% end %>

<%= render :partial => 'colibri/shared/error_messages', :locals => { :target => @tracker } %>

<%= form_for [:admin, @tracker] do |f| %>
  <fieldset class="no-border-top">
    <%= render :partial => 'form', :locals => { :f => f } %>
    <%= render :partial => 'colibri/admin/shared/new_resource_links' %>
  </fieldset>
<% end %>
